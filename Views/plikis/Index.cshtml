@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@model IEnumerable<WebApplication19.Models.pliki>

@{
    ViewData["Title"] = "Portal - pliki";
}
@if (SignInManager.IsSignedIn(User))
{

    <h1>Zdjęcia Twoich znajomych</h1>
    <a asp-controller="plikis" asp-action="Create" class="btn btn-primary">Dodaj pliki</a>
    <br />
    <br />
    <div id="room-image">
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr><td><b>Dodał:</b> @User.Identity.Name </td><td style="text-align: right;"></td></tr>
                <img src="@item.link_bezpośredni" width="100%" height="100%" />
                <br />
                @if (1 == 1)//jesli uzytkownik zalogowany=uzytkownik ktory utworzyl post
                {
                    <div style="text-align: right;">
                        <a asp-action="Edit" asp-route-id="@item.id_pliki" class="btn btn-success">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.id_pliki" class="btn btn-danger">Delete</a>
                    </div>
                }


            }
        }
    </div>

}
else
{
    <div class="text-center">
        <h1 class="display-4">Witaj na Portalu!</h1>
        <p><a href="/Identity/Account/Login">Zaloguj się</a> lub jeśli nie masz jeszcze konta <a href="/Identity/Account/Register">zarejestruj się</a>!</p>
    </div>
}
