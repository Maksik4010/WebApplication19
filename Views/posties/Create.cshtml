@model WebApplication19.Models.posty

@{
    ViewData["Title"] = "Portal - Tworzenie postu";
}

<h1>Tworzenie postu</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="tresc" class="control-label"></label>
                <input asp-for="tresc" class="form-control" />
                <span asp-validation-for="tresc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Wyślij post" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
